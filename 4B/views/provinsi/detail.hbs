            <a href="/" class="btn btn-secondary px-3">
              <span><i class="fas fa-arrow-circle-left"></i></span>
                Back
            </a>
            <a href="/provinsi/edit/{{provinsi.id}}" class="btn btn-warning text-white px-4">
              <span>
                <i class="fas fa-edit"></i>
              </span>
                Edit
            </a>
            <a href="/provinsi/delete/{{provinsi.id}}" class="btn btn-danger">
              <span><i class="fas fa-trash"></i></span>
                Delete
            </a>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

