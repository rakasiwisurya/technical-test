{{> head}}  

<main>
  <div class="wilayah">
    {{#if provinsi}}
    <div class="container">
      <div class="row mb-4 g-4">
        <h2 class="h5"><bold>{{titleProvinsi}}</bold></h2>
        <hr>
        <a href="/provinsi/add" class="btn btn-success my-3">
          <span>
            <i class="fas fa-plus"></i>
          </span>
            Add Provinsi
        </a>
        {{#each provinsi}}
        <div class="col-4">
          <div class="card shadow p-3">
            <img src="{{this.image}}" class="card-img-top" alt="provinsi thumbnail" style="width: 100%; height: 200px;">
            <div class="card-body">
              <h5 class="card-title text-center">{{this.nama}}</h5>
              <p class="card-text text-center">{{this.diresmikanDate}}</p>
              <a href="/provinsi/{{this.id}}" class="btn btn-primary" style="width: 100%;">Detail</a>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      <div class="row g-4">
        <h2 class="h5"><bold>{{titleKabupaten}}</bold></h2>
        <hr>
        <a href="/kabupaten/add" class="btn btn-success my-3">
          <span>
            <i class="fas fa-plus"></i>
          </span>
            Add Kabupaten
        </a>
        {{#each kabupaten}}
        <div class="col-4">
          <div class="card shadow p-3">
            <img src="{{this.image}}" class="card-img-top" alt="kabupaten thumbnail" style="width: 100%; height: 200px;">
            <div class="card-body">
              <h5 class="card-title text-center">{{this.nama}}</h5>
              <p class="card-text text-center">{{this.diresmikanDate}}</p>
              <a href="/kabupaten/{{this.id}}" class="btn btn-primary" style="width: 100%;">Detail</a>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
    {{/if}}
  </div>
</main>

{{> footer}}